

<li id="post-<%=post._id%>">
<div class="card">
    <%if(locals.user.id == post.user.id) {%>
        <a href="/posts/destroy/<%=post.id%>"class="delete-post-button">delete</a>
        <%}%>
        
    <div class="user-info">
      <h2><%=post.user.name%></h2>
    </div>
    <p class="user-text"><%=post.content%></p>
    <form action="/comments/create" method="post"id= "comment-form">
        <input type="text" name="content" placeholder="Add comment here..." required="true">
        <input type="hidden" name="post" value='<%=post._id%>'>
        <input type="submit" value="ADD">
    </form>
    <div class="comments">
      
      <ul>
        <%for( comment of post.comment){ %>
            <%- include('comments.ejs')%>
         <%}%>   
      </ul>
      
    </div>
  </div>
</li>


