<section>
    <h1>
        <%=title%>
    </h1>
    <%if(locals.user.id==profile_user.id) {%>
        <form action="/users/updates/<%=user.id%>" method="post">
            <input type="text" name="name" value="<%=user.name%>" required="true">
            <input type="email" name="email" value="<%=user.email%>" required="true">
            <input type="submit" value="submit">
        </form>
        <%}else {%>
            <p>
                <%=profile_user.email%>
            </p>
            <p>
                <%=profile_user.name%>
            </p>
            <%}%>
</section>